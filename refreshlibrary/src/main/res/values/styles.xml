<resources>


    <style name="Widget.Line.Horizontal" parent="android:Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/color_c3c4c5</item>
    </style>



    <style name="Dialog" parent="android:style/Theme.Dialog">
        <!-- 第一个是dialog的背景色，当然你可以设置图片，不拦大家 -->
        <item name="android:background">@color/color_f2f2f2</item>
        <!-- 第二个就是弹出dialog后，下面的activity层的颜色啦-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--这里设置为没有标题栏，如果这里不设置的话，你会发现无论布局怎么改都会出现多一栏白色 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item><!--边框-->
    </style>
    <style name="Dialog2" parent="android:style/Theme.Dialog">
        <!-- 第一个是dialog的背景色，当然你可以设置图片，不拦大家 -->
        <item name="android:background">@android:color/transparent</item>
        <!-- 第二个就是弹出dialog后，下面的activity层的颜色啦-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--这里设置为没有标题栏，如果这里不设置的话，你会发现无论布局怎么改都会出现多一栏白色 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item><!--边框-->
    </style>

</resources>
